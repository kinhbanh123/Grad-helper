{
    "name": "thesis-formatter-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "npm run dev --prefix frontend",
        "build": "npm run build --prefix frontend",
        "start": "npm run start --prefix frontend",
        "backend": "cd backend && python3 server.py",
        "dev:all": "concurrently \"npm run backend\" \"npm run dev\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\""
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}